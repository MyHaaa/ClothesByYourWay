@model Models.EF.Employee

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<div class="table-agile-info">
    <div class="panel panel-default">
        <div class="panel-heading">
            Thông tin cá nhân của bạn
        </div>
        <div class="row w3-res-tb">
            <div class="container-fluid" style="margin: 0; padding-top: 40px; color: #2e323c; background: #f5f6fa; position: relative; height: 100%;">
                <div class="row gutters">
                    <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                        <div class="card h-100" style="background: #ffffff; -webkit-border-radius: 5px; -moz-border-radius: 5px; border-radius: 5px; border: 0; margin-bottom: 1rem; padding: 15px ">
                            <div class="card-body">
                                <div class="account-settings">
                                    <div class="user-profile" style=" margin: 0 0 1rem 0; padding-bottom: 1rem; text-align: center;">
                                        <div class="user-avatar" style="margin: 0 0 1rem 0;">
                                            <img src="@Model.Image" alt="Maxwell Admin" style="width: 90px; height: 90px; -webkit-border-radius: 100px; -moz-border-radius: 100px; border-radius: 100px;">
                                            @using (Html.BeginForm("UpdateAva", "Profile", FormMethod.Post,
                                                new { enctype = "multipart/form-data" }))
                                            {
                                                <input type="file" name="Picture" class="col-sm-2 form-control" />
                                                <input type="submit" value="Save" class="btn btn-default" />
                                            }
                                        </div>
                                        <h5 class="user-name" style="margin: 0 0 0.5rem 0;">@Model.EmployeeID</h5>
                                        <h6 class="user-email" style=" margin: 0; font-size: 0.8rem; font-weight: 400; color: #9fa8b9;">@Model.Email</h6>
                                    </div>
                                    <div class="about" style="margin: 2rem 0 0 0; text-align: center;">
                                        <h5 style=" margin: 0 0 15px 0; color: #007ae1;">Nhóm người dùng</h5>
                                        <p style="font-size: 0.825rem;">@Model.UserGroup.Name</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                        <div class="card h-100" style="background: #ffffff; -webkit-border-radius: 5px; -moz-border-radius: 5px; border-radius: 5px; border: 0; margin-bottom: 1rem; padding: 15px">
                            <div class="card-body">
                                <div class="row gutters">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mb-5" style="padding-bottom: 10px">
                                        <h6 class="mb-5 text-primary">Thông tin chi tiết</h6>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="fullName">Họ và tên: </label>
                                            @Model.Name
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="eMail">Email: </label>
                                            @Model.Email
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="phone">Số điện thoại: </label>
                                            @Model.Phone
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="website">Ngày sinh: </label>
                                            @Model.DateOfBirth
                                        </div>
                                    </div>
                                </div>
                                <hr />
                                <div class="row gutters">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12" style="padding-bottom: 10px">
                                        <h6 class="mt-3 mb-2 text-primary">Khác</h6>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="Street">Địa chỉ: </label> @Model.Address
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="ciTy">CCCD/CMND: </label> @Model.CitizenID
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="sTate">Ngày tạo: </label> @Model.CreateDated
                                        </div>
                                    </div>

                                </div>
                                <div class="row gutters">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                        <div class="text-right">
                                            <button type="button" id="submit" name="submit" class="btn btn-warning">@Html.ActionLink("Thay đổi mật khẩu", "ChangePassword", "Profile")</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


