@model IEnumerable<Models.EF.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
<div class="alert-success" style="padding:10px">
    <h2>Quản lý đơn hàng</h2>
</div>

<div style="padding: 5px; background-color: aliceblue; border-top: 1px solid black; border-bottom: 1px solid black">
</div>
<table class="table" style="background-color: white">
    <tr>
        <th style="text-align: center; color: black">
            @Html.DisplayNameFor(model => model.OrderID)
        </th>
        <th style="text-align: center; color: black">
            @Html.DisplayNameFor(model => model.Customer.Name)
        </th>
        <th style="text-align: center; color: black">
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th style="text-align: center; color: black">
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th style="text-align: center; color: black">
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th style="text-align: center; color: black">#</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align: center; color: black">
                @Html.DisplayFor(modelItem => item.OrderID)
            </td>

            <td style="text-align: center; color: black">
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td style="text-align: center; color: black">
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td style="text-align: center; color: black">
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td style="text-align: center; color: black">
                @if(item.Status == 1)
                {
                    <span>Chờ xử lý</span>
                }
                @if (item.Status == 2)
                {
                    <span>Vận đơn</span>
                }
                @if (item.Status == 3)
                {
                    <span>Đã giao hàng</span>
                }
                @if (item.Status == 4)
                {
                    <span>Đã huỷ</span>
                }
            </td>
            <td style="text-align: center; color: black">
                @Html.ActionLink("Chi tiết", "Details", new { id = item.OrderID }) 
            </td>
        </tr>
    }

</table>
