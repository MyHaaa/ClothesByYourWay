@model IEnumerable<Models.EF.UserGroup>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
        <div>
            <h4 class="mb-3">Danh sách người dùng trong hệ thống quản trị</h4>
            <p class="mb-0">
                Trang tổng quan cung cấp cho bạn tổng quan về danh sách nhóm người dùng có quyền truy cập vào <br>
                dữ liệu quan trọng nhất chức năng và điều khiển.
            </p>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="table-responsive rounded mb-3">
        <table class="data-table table mb-0 tbl-server-info">
            <thead class="bg-white text-uppercase">
                <tr class="ligth ligth-data">
                    <th>
                        Mã nhóm người dùng
                    </th>
                    <th>
                        Tên nhóm người dùng
                    </th>
                    <th>Action name</th>
                </tr>
            </thead>
            <tbody class="ligth-body">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                                @Html.DisplayFor(modelItem => item.UserGroupID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                        <td>
                            <div class="d-flex align-items-center list-action">
                                <button  class="badge bg-success mr-2">
                                    @Html.ActionLink("User", "GetUserGroupID", new { groupID = item.UserGroupID }, null)
                                </button> |
                                <button  class="badge badge-info mr-2">
                                    @Html.ActionLink("Role", "GetUserGrouppID", new { groupID = item.UserGroupID }, null)
                                </button>
                            </div>

                            @*<a href="/Admin/User/Delete/@item.ID">Xoa</a>*@
                            @*@Ajax.ActionLink("Xóa", "Delete", new { @id = item.UserID }, new AjaxOptions
                                {
                                    Confirm = "Ban co muon xoa?",
                                    OnComplete = "$('#row_)" + item.UserID + "').remove()",
                                    HttpMethod = "Delete"
                                })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>