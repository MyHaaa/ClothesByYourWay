@model List<Models.ViewModels.UserWithGroupView>

@{
    ViewBag.Title = "UserWithGroup";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
        <div>
            <h4 class="mb-3">Danh sách các tài khoản trong nhóm người dùng @Session["GROUP_SESSION"]</h4>
            <p class="mb-0">
                Trang tổng quan này cung cấp cho bạn tổng quan về danh sách <b>tài khoản thuộc nhóm người dùng @Session["GROUP_SESSION"]</b> <br>
                Nếu bạn không muốn thay đổi tài khoản cho nhóm này, bạn có thể @Html.ActionLink("Trở về", "Back")
            </p>
        </div>
        <button class="btn btn-info add-list"><i class="las la-plus mr-3"></i> @Html.ActionLink("Thêm tài khoản mới", "AddNewRole")</button>
    </div>
</div>
<div class="col-lg-12">
    <div class="table-responsive rounded mb-3">
        <table class="data-table table mb-0 tbl-server-info">
            <thead class="bg-white text-uppercase">
                <tr class="ligth ligth-data">
                    <th>
                        Ma nhan vien
                    </th>
                    <th>
                        Ten nhan vien
                    </th>
                    <th>
                        Nhom nguoi dung
                    </th>
                    <th>
                        Action name
                    </th>
                </tr>
            </thead>
            <tbody class="ligth-body">
                @foreach (var item in Model)
                {
                    <tr id="row_@item.EmployeeID">
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GroupID)
                        </td>
                        <td>
                            <div class="d-flex align-items-center list-action">
                                <button class="badge bg-success mr-2">

                                    @Ajax.ActionLink("Delete", "Delete", new { @id = item.EmployeeID }, new AjaxOptions
                                       {
                                           Confirm = "Ban muon xoa nguoi dung nay?",
                                           OnComplete = "$('#row_)" + @item.EmployeeID + "').remove()",
                                           HttpMethod = "Delete"
                                       })
                                </button> 
                            </div>

                            @*<a href="/Admin/User/Delete/@item.ID">Xoa</a>*@
                            @*@Ajax.ActionLink("Xóa", "Delete", new { @id = item.UserID }, new AjaxOptions
                {
                    Confirm = "Ban co muon xoa?",
                    OnComplete = "$('#row_)" + item.UserID + "').remove()",
                    HttpMethod = "Delete"
                })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<div class="table-agile-info">
    <div class="panel panel-default">
        <div class="panel-heading">
            Danh sách các tài khoản thuộc nhóm @Session["GROUP_SESSION"]
        </div>
        <div class="row w3-res-tb">
            <div class="col-sm-2 m-b-xs">
                @Html.ActionLink("Back", "Back")
            </div>

        </div>
        <div class="table-responsive">
            <table class="table table-striped b-t b-light">
                <thead>
                    <tr>
                        <th>
                            Ma nhan vien
                        </th>
                        <th>
                            Ten nhan vien
                        </th>
                        <th>
                            Nhom nguoi dung
                        </th>
                        <th>
                            Action name
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.EmployeeID">

                            <td>
                                @Html.DisplayFor(modelItem => item.EmployeeID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GroupID)
                            </td>
                            <td>
                                @*@Html.ActionLink("Delete", "Delete", new { id=item.UserID })*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

