@model List<ClothesBYW.Areas.Administrator.Models.POCartItem>
@{
    ViewBag.Title = "POCart";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="/Assets/Admin/js/Controller/cartController.js"></script>
}

<div class="table-agile-info">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 id="poID">Mã đơn nhập hàng @Session["PurchaseOrderID"]</h4>
            <input type="hidden" id="txtSessionName" value="@Session["PurchaseOrderID"]" />
        </div>
        <div class="row w3-res-tb">
            <div class="col-sm-5 m-b-xs">
                <button class="btn btn-default">@Html.ActionLink("Thêm mới", "Create")</button>
            </div>
            <div class="col-sm-4">
            </div>
            <div class="col-sm-3">
                @using (Html.BeginForm("Index", "Products", FormMethod.Get))
                {
                    <div class="input-group">
                        @*<input type="text" class="form-control search" placeholder=" Search" value="@ViewBag.SearchString" name="searchString">*@
                        <input type="text" class="input-sm form-control search" placeholder="Search" value="@ViewBag.SearchString" name="searchString" />

                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-sm btn-success">Go!</button>
                        </span>
                    </div>
                }
            </div>
        </div>
        <div class="row w3-res-tb">
            <div class="table-responsive" id="deTable">
                @if (Model.Count > 0)
                {
                    <table class="table table-striped b-t b-light">
                        <thead>
                            <tr>
                                <td>Mã dòng SP</td>
                                <td>Size</td>
                                <td>Màu sắc</td>
                                <td>Số lượng đặt mua</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ProductLine.ProductLineID</td>
                                    <td>@item.ProductLine.Size</td>
                                    <td>@item.ProductLine.Color.ColorName</td>
                                    <td><input type="number" class="txtPurchaseQuantity" data-id="@item.PurchaseQuantity" value="@item.PurchaseQuantity" /></td>
                                    <td><a href="#" data-id="@item.ProductLine.ProductLineID" class="btn-delete">Xoá</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <button id="btnContinue" class="btn">Tiếp tục thêm sản phẩm</button>
                    <button id="btnUpdate" class="btn">Cập nhật đơn đơn đặt hàng</button>
                    <button id="btnDeleteAll" class="btn">Xoá đơn đặt hàng</button>
                    <button id="btnSave" class="btn">Xác nhận</button>
                }
            </div>
        </div>

    </div>
</div>

