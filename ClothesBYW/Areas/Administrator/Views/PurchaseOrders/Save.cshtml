@model List<ClothesBYW.Areas.Administrator.Models.POCartItem>
@{
    ViewBag.Title = "Save";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="section group">
        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Mã dòng SP</td>
                        <td>Size</td>
                        <td>Màu sắc</td>
                        <td>Số lượng đặt mua</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductLine.ProductLineID</td>
                            <td>@item.ProductLine.Size</td>
                            <td>@item.ProductLine.Color.ColorName</td>
                            <td>@item.PurchaseQuantity</td>
                        </tr>
                    }

                </tbody>
            </table>

        }

    </div>
    <div class="section group">
        <div class="col-md-6">
            @using (Html.BeginForm("Save", "PurchaseOrders", FormMethod.Post))
            {
                <div class="form-group">
                    <label>Note:</label>
                    <input name="note" class="form-control" />
                </div>

                <button type="submit" class="btn">Xuất đơn hàng</button>
            }
        </div>

    </div>
</div>

