@model Models.EF.PurchaseOrder


<div class="modal-body" style="margin: 20px">
    <div class="popup text-left" style="margin: 20px">

        <h4 class="modal-title mb-3" style="text-align: center; font-weight: bold; text-transform:uppercase; color: orangered">Thêm đơn nhập hàng mới</h4>
        <div class="content create-workform bg-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Bạn muốn tạo đơn nhập hàng mới?</h4>
                    <div class="pb-3">
                        <label class="mb-2">Chọn nhà cung cấp</label>
                        @Html.DropDownList("SupplierID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SupplierID, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-lg-12 mt-4">
                        <div class="d-flex flex-wrap align-items-ceter justify-content-center">
                            <div class="btn btn-primary mr-4" data-dismiss="modal" >Cancel</div>
                            <input type="submit" value="Tạo mới" class="btn btn-primary" />
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>



