@model Models.EF.CustomerCategory

@{
    Layout = null;
}
@section jsFooter{

}

<div class="row" style="padding-top: 30px"></div>

@using (Html.BeginForm("AddOrEdit", "CustomerCategories", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this);", data_restUrl = Url.Action("AddOrEdit", "CustomerCategories", new { id = 0 }) }))//data-resetUrl
{
    @Html.AntiForgeryToken()
    <div class="row" style="vertical-align:middle">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.CustomerCategoryID)


            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-3" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-3" })
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" }})
                        @Html.ValidationMessageFor(model => model.Description)
                      
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-5 col-md-7">
                        <input type="submit" value="Submit" class="btn btn-default" />
                        @if (Model.CustomerCategoryID != 0)
                        {
                            <a class="btn btn-success" onclick="refreshAddNewTab('@Url.Action("AddOrEdit","CustomerCategories",new{id=0})',false)"><i class="fa fa-plus"></i> Thêm mới</a>
                        }
                        <button class="btn btn-warning"> @Html.ActionLink("Cancel", "Index")</button>
                    </div>
                </div>
            </div>


        </div>
    </div>
}
