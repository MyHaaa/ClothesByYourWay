@model IEnumerable<Models.EF.Supplier>

@{
    Layout = null;
}

<div class="table-responsive" id="deTable">
    <table class="table table-striped b-t b-light">
        <thead>
            <tr>
                <th style="text-align: center; color: black">
                    Tên Nhà Phân Phối
                </th>
                <th style="text-align: center; color: black">
                    Email
                </th>
                <th style="text-align: center; color: black">
                    Địa chỉ
                </th>
                <th style="text-align: center; color: black">
                    Điện Thoại NPP
                </th>
                <th style="text-align: center; color: black">Action Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: center; color: black">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td style="text-align: center; color: black">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td style="text-align: center; color: black">
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td style="text-align: center; color: black">
                        @Html.DisplayFor(modelItem => item.PhoneSupplier)
                    </td>
                    <td style="text-align: center; color: black">
                        <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit", "Suppliers", new { id=@item.SupplierID})')"><i class="fa fa-pencil"></i></a>
                        @*<a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete", "Suppliers", new { id=@item.SupplierID})')"><i class="fa fa-trash"></i></a>*@

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>