@model Models.EF.Supplier

@{
    Layout = null;
}


<div class="row" style="padding-top: 30px"></div>



@using (Html.BeginForm("AddOrEdit", "Suppliers", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this);", data_restUrl = Url.Action("AddOrEdit", "Suppliers", new { id = 0 }) }))//data-resetUrl
{
    @Html.AntiForgeryToken()
    <div class="col-sm-12" style="margin-bottom: 10px">
        <div class="">
            <form action="page-list-suppliers.html" data-toggle="validator">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.SupplierID)

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Name *</label>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Phone Number *</label>
                            @Html.EditorFor(model => model.PhoneSupplier, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PhoneSupplier)
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Email *</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Address</label>
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Address)
                        </div>
                    </div>
                </div>
                <input type="submit" value="Submit"  class="btn btn-primary mr-2" />
                @if (Model.SupplierID != 0)
                {
                    <a class="btn btn-success" onclick="refreshAddNewTab('@Url.Action("AddOrEdit","Suppliers",new{id=0})',false)"><i class="fa fa-plus"></i> Thêm mới</a>
                }
                <button class="btn btn-warning mr-2"> @Html.ActionLink("Cancel", "Index")</button>

                <button type="reset" class="btn btn-danger">Reset</button>
            </form>
        </div>
    </div>
    
}
